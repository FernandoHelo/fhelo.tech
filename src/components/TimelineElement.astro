---
const { date, title, company, description } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-400 bg-gray-600"
  >
  </div>
  <time class="mb-1 text-sm font-normal leading-none text-gray-600">{date}</time
  >
  <h3 class="text-lg font-semibold text-gray-300">{title}</h3>
  <h2 class="text-gray-600 mb-2">at {company}</h2>

  <p class="mb-4 text-base font-normal text-gray-500">
    {description}
  </p>
</li>
