---
const { title, link } = Astro.props;
import { ArrowRight } from "lucide-astro";
---

<section class="my-8">
  <div class="flex justify-between items-center">
    <div>
      <h2 class="text-xl font-bold mb-4 text-white/80 flex items-center gap-2">
        {title}
      </h2>
    </div>
    <div class="">
      {
        link ? (
          <a
            href={link}
            class="flex items-center text-sm text-gray-500 hover:text-gray-200 hover:font-bolder transition-all duration-300 underline"
          >
            more
            <ArrowRight class="h-4 w-4" />
          </a>
        ) : null
      }
    </div>
  </div>
  <div class="max-w-screen-md">
    <slot name="content" />
  </div>
  <div class="w-full">
    <slot name="content-full" />
  </div>
</section>
