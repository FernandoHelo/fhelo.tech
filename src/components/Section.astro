---
const { title, link } = Astro.props;
import { ArrowRight } from "lucide-astro";
---

<section class="my-10">
  <h2 class="text-xl font-bold mb-4 text-white/80 flex items-center gap-2">
    {title}
    {
      link ? (
        <a href={link}>
          <ArrowRight />
        </a>
      ) : null
    }
  </h2>
  <div class="max-w-screen-md">
    <slot name="content" />
  </div>
  <div class="w-full">
    <slot name="content-full" />
  </div>
</section>
